<!DOCTYPE html>
<html lang="es">
<head>
    <title>Crear Renders - Render AI</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1" charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="public/css/sidebar.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/public/css/styles2.css">
    <link rel="icon" href="public/images/favicon.png">

    <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="public/js/jquery.js"></script>
    <script type="text/javascript" src="public/js/sidebar.js"></script>
    
    <style>
        .render-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 30px;
            background: linear-gradient(135deg, #1e1e1e, #2a2a2a);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: #fff;
        }

        .render-container h1 {
            text-align: center;
            color: #b19cd9;
            margin-bottom: 30px;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .form-profile {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group label {
            color: #bbb;
            font-size: 1.1rem;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .form-group input,
        .form-group select {
            padding: 12px 15px;
            border: 1px solid #444;
            border-radius: 8px;
            background-color: #333;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #6c63ff;
            box-shadow: 0 0 10px rgba(108, 99, 255, 0.3);
        }

        .form-group input::placeholder {
            color: #888;
        }

        .file-upload-area {
            border: 2px dashed #666;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            background-color: #2a2a2a;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .file-upload-area:hover {
            border-color: #6c63ff;
            background-color: #333;
        }

        .file-upload-area.dragover {
            border-color: #6c63ff;
            background-color: rgba(108, 99, 255, 0.1);
        }

        .upload-icon {
            font-size: 3rem;
            color: #666;
            margin-bottom: 15px;
        }

        .upload-text {
            color: #bbb;
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .upload-subtext {
            color: #888;
            font-size: 0.9rem;
        }

        .preview-container {
            margin-top: 20px;
            text-align: center;
        }

        .preview-image {
            max-width: 100%;
            max-height: 300px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .submit-btn {
            background: linear-gradient(135deg, #6c63ff, #574dcf);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .submit-btn:hover {
            background: linear-gradient(135deg, #574dcf, #4b45b1);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(108, 99, 255, 0.4);
        }

        .submit-btn:disabled {
            background: #555;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .info-section {
            background: rgba(108, 99, 255, 0.1);
            border: 1px solid #6c63ff;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .info-section h3 {
            color: #6c63ff;
            margin-bottom: 10px;
        }

        .info-section p {
            color: #ccc;
            margin: 5px 0;
        }

        .error-message {
            background-color: #2a1f1f;
            color: #ff6b6b;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #ff6b6b;
        }

        .success-message {
            background-color: #1f2a1f;
            color: #4CAF50;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #4CAF50;
        }

        @media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .render-container {
                margin: 10px;
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <!-- Incluir la Sidebar -->
                <div class="col-auto">
                    <%- include('./partials/sidebar.ejs') %>
                </div>
                
                <!-- Contenido Principal -->
                <div class="col">
                    <div class="render-container">
                        <h1>üé® Crear Nuevo Render</h1>

                        <!-- Mostrar mensajes de error o √©xito -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="error-message">
                                <strong>‚ùå Error:</strong> <%= error %>
                            </div>
                        <% } %>
                        
                        <% if (typeof exito !== 'undefined' && exito) { %>
                            <div class="success-message">
                                <strong>‚úÖ √âxito:</strong> <%= exito %>
                            </div>
                        <% } %>

                        <!-- Informaci√≥n sobre el proceso -->
                        <div class="info-section">
                            <h3>üìã C√≥mo funciona</h3>
                            <p>‚Ä¢ Sube un boceto de tu proyecto arquitect√≥nico</p>
                            <p>‚Ä¢ Completa los detalles del proyecto (tama√±o, estilo, acabados)</p>
                            <p>‚Ä¢ Nuestra IA generar√° un render profesional y calcular√° el costo estimado</p>
                            <p>‚Ä¢ Descarga tu render y util√≠zalo en tus presentaciones</p>
                        </div>

                        <!-- Formulario principal -->
                        <form action="/process" method="post" enctype="multipart/form-data" class="form-profile" id="renderForm">
                            
                            <!-- Subida de archivo -->
                            <div class="form-group">
                                <label for="imagen">üìÅ Sube tu boceto:</label>
                                <div class="file-upload-area" id="fileUploadArea">
                                    <div class="upload-icon">üìÅ</div>
                                    <div class="upload-text">Haz clic aqu√≠ o arrastra tu boceto</div>
                                    <div class="upload-subtext">Formatos soportados: JPG, PNG, GIF (M√°x. 10MB)</div>
                                    <input type="file" id="imagen" name="imagen" accept="image/*" required style="display: none;">
                                </div>
                                <div class="preview-container" id="previewContainer" style="display: none;">
                                    <img id="previewImage" class="preview-image" alt="Vista previa del boceto">
                                </div>
                            </div>

                            <!-- T√≠tulo del proyecto -->
                            <div class="form-group">
                                <label for="titulo">üìù T√≠tulo del proyecto:</label>
                                <input type="text" id="titulo" name="titulo" placeholder="Ej: Casa moderna familiar" required>
                            </div>

                            <!-- Fila de especificaciones b√°sicas -->
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="tama√±o">üìê Tama√±o en metros cuadrados:</label>
                                    <input type="number" id="tama√±o" name="tama√±o" placeholder="150" min="1" max="10000" required>
                                </div>

                                <div class="form-group">
                                    <label for="pisos">üè¢ N√∫mero de pisos:</label>
                                    <select id="pisos" name="pisos" required>
                                        <option value="">Seleccionar...</option>
                                        <option value="1">1 Piso</option>
                                        <option value="2">2 Pisos</option>
                                        <option value="3">3 Pisos</option>
                                        <option value="4">4 Pisos</option>
                                        <option value="5">5+ Pisos</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Fila de estilo y ambiente -->
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="estilo">üé® Estilo arquitect√≥nico:</label>
                                    <select id="estilo" name="estilo" required>
                                        <option value="">Seleccionar estilo...</option>
                                        <option value="internacional">Econ√≥mico</option>
                                        <option value="clasico">Cl√°sico</option>
                                        <option value="moderno">Moderno</option>
                                        <option value="contemporaneo">Contempor√°neo</option>
                                        <option value="minimalista">Minimalista</option>
                                        <option value="industrial">Industrial</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="ambiente">üåø Entorno:</label>
                                    <select id="ambiente" name="ambiente" required>
                                        <option value="">Seleccionar entorno...</option>
                                        <option value="clean">Limpio</option>
                                        <option value="urban">Urbano</option>
                                        <option value="natural">Natural</option>
                                        <option value="luxurious">Lujoso</option>
                                        <option value="rustic">R√∫stico</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Tipo de acabados -->
                            <div class="form-group">
                                <label for="acabados">‚ú® Tipo de acabados:</label>
                                <select id="acabados" name="acabados" required>
                                    <option value="">Seleccionar acabados...</option>
                                    <option value="economicos">Econ√≥micos</option>
                                    <option value="medios">Medios</option>
                                    <option value="premium">Premium</option>
                                    <option value="lujo">Lujo</option>
                                </select>
                            </div>

                            <!-- Bot√≥n de env√≠o -->
                            <button type="submit" class="submit-btn" id="submitBtn">
                                üé® Generar Render y Calcular Costo
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Elementos del DOM
        const fileUploadArea = document.getElementById('fileUploadArea');
        const fileInput = document.getElementById('imagen');
        const previewContainer = document.getElementById('previewContainer');
        const previewImage = document.getElementById('previewImage');
        const form = document.getElementById('renderForm');
        const submitBtn = document.getElementById('submitBtn');

        // Eventos de drag and drop
        fileUploadArea.addEventListener('click', () => fileInput.click());
        
        fileUploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            fileUploadArea.classList.add('dragover');
        });
        
        fileUploadArea.addEventListener('dragleave', () => {
            fileUploadArea.classList.remove('dragover');
        });
        
        fileUploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            fileUploadArea.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                handleFileSelect();
            }
        });

        // Manejar selecci√≥n de archivo
        fileInput.addEventListener('change', handleFileSelect);

        function handleFileSelect() {
            const file = fileInput.files[0];
            
            if (!file) return;

            // Validar tipo de archivo
            if (!file.type.startsWith('image/')) {
                alert('‚ùå Por favor, selecciona un archivo de imagen v√°lido.');
                fileInput.value = '';
                return;
            }

            // Validar tama√±o (10MB m√°ximo)
            if (file.size > 10 * 1024 * 1024) {
                alert('‚ùå El archivo es demasiado grande. El tama√±o m√°ximo es 10MB.');
                fileInput.value = '';
                return;
            }

            // Mostrar vista previa
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImage.src = e.target.result;
                previewContainer.style.display = 'block';
                
                // Actualizar √°rea de upload
                fileUploadArea.innerHTML = `
                    <div class="upload-icon">‚úÖ</div>
                    <div class="upload-text">Archivo cargado: ${file.name}</div>
                    <div class="upload-subtext">Haz clic para cambiar</div>
                `;
            };
            reader.readAsDataURL(file);
        }

        // Validaci√≥n del formulario
        form.addEventListener('submit', function(e) {
            const titulo = document.getElementById('titulo').value.trim();
            const tama√±o = document.getElementById('tama√±o').value;
            const pisos = document.getElementById('pisos').value;
            const estilo = document.getElementById('estilo').value;
            const ambiente = document.getElementById('ambiente').value;
            const acabados = document.getElementById('acabados').value;

            // Validaciones
            if (!fileInput.files[0]) {
                e.preventDefault();
                alert('‚ùå Por favor, sube una imagen del boceto.');
                return;
            }

            if (!titulo) {
                e.preventDefault();
                alert('‚ùå Por favor, ingresa un t√≠tulo para el proyecto.');
                return;
            }

            if (!tama√±o || tama√±o <= 0) {
                e.preventDefault();
                alert('‚ùå Por favor, ingresa un tama√±o v√°lido en metros cuadrados.');
                return;
            }

            if (!pisos || !estilo || !ambiente || !acabados) {
                e.preventDefault();
                alert('‚ùå Por favor, completa todos los campos requeridos.');
                return;
            }

            // Mostrar estado de carga
            submitBtn.disabled = true;
            submitBtn.innerHTML = '‚è≥ Generando render...';
            
            // Mensaje adicional despu√©s de 3 segundos
            setTimeout(() => {
                if (submitBtn.disabled) {
                    submitBtn.innerHTML = 'üé® Procesando con IA...';
                }
            }, 3000);
        });

        // Tooltips para los campos
        const tooltips = {
            'tama√±o': 'Ingresa el √°rea total de construcci√≥n en metros cuadrados',
            'pisos': 'Selecciona el n√∫mero de niveles de la construcci√≥n',
            'estilo': 'Elige el estilo arquitect√≥nico que mejor describa tu proyecto',
            'ambiente': 'Define el entorno donde se ubicar√° la construcci√≥n',
            'acabados': 'Selecciona el nivel de acabados deseado'
        };

        // Agregar tooltips
        Object.keys(tooltips).forEach(id => {
            const element = document.getElementById(id);
            if (element) {
                element.title = tooltips[id];
            }
        });
    </script>
</body>
</html>