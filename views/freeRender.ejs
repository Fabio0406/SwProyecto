<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Render AI - Versi√≥n Gratuita</title>
    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="/public/css/styles2.css">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-size: cover;
            background-attachment: fixed;
            background-position: center;
            background-color: rgba(0, 0, 0, 0.603);
            background-blend-mode: darken;
        }

        .login-container {
            background-color: #1e1e1e;
            padding: 40px;
            border-radius: 8px;
            width: 500px;
            box-shadow: 0px 4px 8px rgba(255, 255, 255, 0.5);
            color: #fff;
        }

        .sidebar {
            width: 300px;
            background-color: #f9f9f9;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            overflow-y: auto;
        }

        h1 {
            color: #fff;
            font-size: 18px;
            text-align: center;
        }

        label {
            color: #bbb;
            font-size: 14px;
            margin-bottom: 5px;
            display: block;
        }

        input,
        select,
        button {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
        }

        button {
            background-color: #6c63ff;
            color: white;
            cursor: pointer;
            border: none;
            font-weight: bold;
        }

        button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        button:hover:enabled {
            background-color: #574dcf;
        }

        .info {
            color: #ff6b6b;
            font-size: 14px;
            text-align: center;
            margin-top: 10px;
        }

        .uploaded-preview {
            width: 100%;
            height: 200px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            margin-bottom: 15px;
        }

        .uploaded-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .uploaded-preview-placeholder {
            color: #666;
            text-align: center;
        }

        .main-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #ffffff;
            overflow: hidden;
            position: relative;
        }

        .generated-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            display: none;
        }

        .error-message {
            color: #ff6b6b;
            background-color: #2a1f1f;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            text-align: center;
        }

        .success-message {
            color: #4CAF50;
            background-color: #1f2a1f;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <!-- Incluir la Sidebar -->
                <div class="col-auto">
                    <%- include('./partials/sidebar.ejs') %>
                </div>
                
                <!-- Contenido Principal -->
                <div class="col d-flex justify-content-center align-items-center">
                    <div class="login-container">
                        <h1>Generador de Render - Gratuito</h1>
                        
                        <!-- Mostrar mensajes de error o √©xito -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="error-message"><%= error %></div>
                        <% } %>
                        
                        <% if (typeof exito !== 'undefined' && exito) { %>
                            <div class="success-message"><%= exito %></div>
                        <% } %>
                        
                        <form action="/process" method="post" enctype="multipart/form-data">
                            <label for="imagen">Sube tu Boceto:</label>
                            <input type="file" id="imagen" name="imagen" accept="image/*" required>

                            <div class="uploaded-preview" id="uploaded-preview">
                                <div class="uploaded-preview-placeholder">
                                    <p>Vista previa del boceto aparecer√° aqu√≠</p>
                                </div>
                                <img id="uploaded-image" alt="Vista previa del boceto" style="display: none;">
                            </div>
                            
                            <label for="titulo">T√≠tulo del Proyecto:</label>
                            <input type="text" id="titulo" name="titulo" placeholder="Ejemplo: casa moderna" required>

                            <label for="estilo">Estilo:</label>
                            <select id="estilo" name="estilo" required>
                                <option value="internacional">Econ√≥mico</option>
                                <option value="clasico">Cl√°sico</option>
                                <option value="moderno">Moderno</option>
                            </select>

                            <label for="ambiente">Entorno:</label>
                            <select id="ambiente" name="ambiente" required>
                                <option value="clean">Limpio</option>
                                <option value="urban">Urbano</option>
                                <option value="natural">Natural</option>
                            </select>

                            <label for="tama√±o">Tama√±o en metros cuadrados:</label>
                            <input type="number" id="tamano" name="tamano" placeholder="Ejemplo: 150" min="1" required>

                            <label for="pisos">N√∫mero de pisos:</label>
                            <select id="pisos" name="pisos" required>
                                <option value="1">1 Piso</option>
                                <option value="2">2 Pisos</option>
                                <option value="3">3 Pisos</option>
                            </select>

                            <label for="acabados">Tipo de acabados:</label>
                            <select id="acabados" name="acabados" required>
                                <option value="economicos">Econ√≥micos</option>
                                <option value="medios">Medios</option>
                                <option value="premium">Premium</option>
                            </select>

                            <button type="submit" id="generate-btn">
                                üé® Generar Render
                            </button>
                        </form>
                        
                        <div class="info" id="info">
                            <% if (typeof intentos !== 'undefined') { %>
                                Tienes <%= Math.max(0, 3 - intentos) %> renders gratuitos restantes de 3.
                            <% } else { %>
                                Tienes 3 renders gratuitos disponibles.
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Previsualizar la imagen subida
        document.getElementById('imagen').addEventListener('change', function(event) {
            const file = event.target.files[0];
            const uploadedImage = document.getElementById('uploaded-image');
            const placeholder = document.querySelector('.uploaded-preview-placeholder');
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    uploadedImage.src = e.target.result;
                    uploadedImage.style.display = 'block';
                    placeholder.style.display = 'none';
                };
                reader.readAsDataURL(file);
            } else {
                uploadedImage.style.display = 'none';
                placeholder.style.display = 'block';
            }
        });

        // Validar formulario antes del env√≠o
        document.querySelector('form').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('imagen');
            const titulo = document.getElementById('titulo').value.trim();
            const tama√±o = document.getElementById('tama√±o').value;
            
            if (!fileInput.files[0]) {
                e.preventDefault();
                alert('Por favor, sube una imagen del boceto.');
                return;
            }
            
            if (!titulo) {
                e.preventDefault();
                alert('Por favor, ingresa un t√≠tulo para el proyecto.');
                return;
            }
            
            if (!tama√±o || tama√±o <= 0) {
                e.preventDefault();
                alert('Por favor, ingresa un tama√±o v√°lido en metros cuadrados.');
                return;
            }

            // Mostrar mensaje de procesamiento
            const button = document.getElementById('generate-btn');
            button.disabled = true;
            button.innerHTML = '‚è≥ Generando render...';
        });
    </script>
</body>

</html>