<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Proyectos - Render AI</title>
    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="/public/css/styles2.css">
    <style>
        .proyectos-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px;
            color: #fff;
        }

        .proyectos-header {
            background: linear-gradient(135deg, #1e1e1e, #2a2a2a);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            text-align: center;
        }

        .proyectos-header h1 {
            color: #b19cd9;
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .proyectos-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .stat-card {
            background: #333;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }

        .stat-number {
            font-size: 2rem;
            color: #6c63ff;
            font-weight: bold;
        }

        .stat-label {
            color: #bbb;
            margin-top: 5px;
        }

        .nuevo-proyecto-btn {
            background: linear-gradient(135deg, #6c63ff, #574dcf);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            margin: 20px 0;
            transition: all 0.3s ease;
        }

        .nuevo-proyecto-btn:hover {
            background: linear-gradient(135deg, #574dcf, #4b45b1);
            transform: translateY(-2px);
        }

        .proyectos-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
        }

        .proyecto-card {
            background: linear-gradient(135deg, #333, #444);
            border-radius: 15px;
            padding: 25px;
            border: 1px solid #555;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .proyecto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6);
        }

        .proyecto-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(108, 99, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .proyecto-card:hover::before {
            left: 100%;
        }

        .proyecto-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .proyecto-titulo {
            color: #b19cd9;
            font-size: 1.3rem;
            font-weight: bold;
            margin: 0;
        }

        .proyecto-categoria {
            background: #6c63ff;
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            text-transform: uppercase;
        }

        .proyecto-descripcion {
            color: #ccc;
            margin: 15px 0;
            line-height: 1.4;
        }

        .proyecto-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin: 15px 0;
        }

        .proyecto-stat {
            background: rgba(0, 0, 0, 0.3);
            padding: 10px;
            border-radius: 8px;
            text-align: center;
        }

        .proyecto-stat-number {
            font-size: 1.5rem;
            color: #4CAF50;
            font-weight: bold;
        }

        .proyecto-stat-label {
            font-size: 0.8rem;
            color: #bbb;
        }

        .proyecto-acciones {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-accion {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-ver {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: white;
        }

        .btn-editar {
            background: linear-gradient(135deg, #FF9800, #F57C00);
            color: white;
        }

        .btn-video {
            background: linear-gradient(135deg, #9C27B0, #7B1FA2);
            color: white;
        }

        .btn-accion:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .sin-proyectos {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(135deg, #1e1e1e, #2a2a2a);
            border-radius: 15px;
            margin-top: 30px;
        }

        .sin-proyectos h3 {
            color: #b19cd9;
            font-size: 1.8rem;
            margin-bottom: 20px;
        }

        .sin-proyectos p {
            color: #ccc;
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Modal para crear proyecto */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
        }

        .modal-content {
            background: linear-gradient(135deg, #1e1e1e, #2a2a2a);
            margin: 5% auto;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 500px;
            color: #fff;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .modal-title {
            color: #b19cd9;
            font-size: 1.5rem;
            margin: 0;
        }

        .close {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close:hover {
            color: #fff;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: #bbb;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #444;
            border-radius: 8px;
            background-color: #333;
            color: #fff;
            font-size: 1rem;
            box-sizing: border-box;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #6c63ff;
            box-shadow: 0 0 10px rgba(108, 99, 255, 0.3);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

        @media (max-width: 768px) {
            .proyectos-grid {
                grid-template-columns: 1fr;
            }
            
            .proyectos-stats {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <!-- Incluir la Sidebar -->
                <div class="col-auto">
                    <%- include('./partials/sidebar.ejs') %>
                </div>
                
                <!-- Contenido Principal -->
                <div class="col">
                    <div class="proyectos-container">
                        <!-- Header -->
                        <div class="proyectos-header">
                            <h1>üìÅ Mis Proyectos</h1>
                            <p>Organiza tus renders en proyectos para crear videos profesionales</p>
                            
                            <div class="proyectos-stats">
                                <div class="stat-card">
                                    <div class="stat-number"><%= totalProyectos %></div>
                                    <div class="stat-label">Proyectos Totales</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-number">
                                        <% 
                                        let totalRenders = 0;
                                        if (proyectos) {
                                            proyectos.forEach(p => totalRenders += (p.renders ? p.renders.length : 0));
                                        }
                                        %>
                                        <%= totalRenders %>
                                    </div>
                                    <div class="stat-label">Renders Organizados</div>
                                </div>
                                <div class="stat-card">
                                    <div class="stat-number">
                                        <% if (usuario.esPremium) { %>
                                            ‚àû
                                        <% } else { %>
                                            <%= Math.max(0, 3 - usuario.rendersGratuitos) %>
                                        <% } %>
                                    </div>
                                    <div class="stat-label">Renders Disponibles</div>
                                </div>
                            </div>

                            <button class="nuevo-proyecto-btn" onclick="abrirModalProyecto()">
                                ‚ûï Crear Nuevo Proyecto
                            </button>
                        </div>

                        <!-- Lista de Proyectos -->
                        <% if (proyectos && proyectos.length > 0) { %>
                            <div class="proyectos-grid">
                                <% proyectos.forEach(function(proyecto) { %>
                                    <div class="proyecto-card">
                                        <div class="proyecto-header">
                                            <h3 class="proyecto-titulo"><%= proyecto.nombre %></h3>
                                            <span class="proyecto-categoria"><%= proyecto.categoria %></span>
                                        </div>

                                        <div class="proyecto-descripcion">
                                            <%= proyecto.descripcion || 'Sin descripci√≥n' %>
                                        </div>

                                        <div class="proyecto-stats">
                                            <div class="proyecto-stat">
                                                <div class="proyecto-stat-number">
                                                    <%= proyecto.renders ? proyecto.renders.length : 0 %>
                                                </div>
                                                <div class="proyecto-stat-label">Renders</div>
                                            </div>
                                            <div class="proyecto-stat">
                                                <div class="proyecto-stat-number">
                                                    <%= new Date(proyecto.createdAt).toLocaleDateString('es-ES') %>
                                                </div>
                                                <div class="proyecto-stat-label">Creado</div>
                                            </div>
                                        </div>

                                        <div class="proyecto-acciones">
                                            <button class="btn-accion btn-ver" onclick="verProyecto('<%= proyecto._id %>')">
                                                üëÅÔ∏è Ver
                                            </button>
                                            <% if (proyecto.renders && proyecto.renders.length >= 2) { %>
                                                <button class="btn-accion btn-video" onclick="generarVideo('<%= proyecto._id %>')">
                                                    üé¨ Video
                                                </button>
                                            <% } else { %>
                                                <button class="btn-accion btn-editar" disabled style="opacity: 0.5;">
                                                    üé¨ Video (2+ renders)
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="sin-proyectos">
                                <h3>üìÅ A√∫n no has creado ning√∫n proyecto</h3>
                                <p>Los proyectos te permiten organizar tus renders y crear videos profesionales</p>
                                <button class="nuevo-proyecto-btn" onclick="abrirModalProyecto()">
                                    ‚ú® Crear mi primer proyecto
                                </button>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para crear proyecto -->
    <div id="modalProyecto" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Crear Nuevo Proyecto</h2>
                <span class="close" onclick="cerrarModalProyecto()">&times;</span>
            </div>
            <form id="formProyecto">
                <div class="form-group">
                    <label for="nombreProyecto">Nombre del Proyecto *</label>
                    <input type="text" id="nombreProyecto" name="nombre" required 
                           placeholder="Ej: Casa Moderna Familiar" maxlength="100">
                </div>

                <div class="form-group">
                    <label for="categoriaProyecto">Categor√≠a</label>
                    <select id="categoriaProyecto" name="categoria">
                        <option value="residencial">Residencial</option>
                        <option value="comercial">Comercial</option>
                        <option value="industrial">Industrial</option>
                        <option value="institucional">Institucional</option>
                        <option value="mixto">Mixto</option>
                        <option value="otro">Otro</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="descripcionProyecto">Descripci√≥n</label>
                    <textarea id="descripcionProyecto" name="descripcion" 
                              placeholder="Describe brevemente el proyecto..." maxlength="500"></textarea>
                </div>

                <button type="submit" class="nuevo-proyecto-btn" style="width: 100%;">
                    üìÅ Crear Proyecto
                </button>
            </form>
        </div>
    </div>

    <script>
        // Funciones del modal
        function abrirModalProyecto() {
            document.getElementById('modalProyecto').style.display = 'block';
        }

        function cerrarModalProyecto() {
            document.getElementById('modalProyecto').style.display = 'none';
            document.getElementById('formProyecto').reset();
        }

        // Cerrar modal al hacer click fuera
        window.onclick = function(event) {
            const modal = document.getElementById('modalProyecto');
            if (event.target === modal) {
                cerrarModalProyecto();
            }
        }

        // Manejar env√≠o del formulario
        document.getElementById('formProyecto').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const datos = Object.fromEntries(formData);

            try {
                const response = await fetch('/proyectos/crear', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(datos)
                });

                const resultado = await response.json();

                if (resultado.exito) {
                    alert('‚úÖ Proyecto creado exitosamente');
                    location.reload();
                } else {
                    alert('‚ùå Error: ' + resultado.mensaje);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('‚ùå Error creando el proyecto');
            }
        });

        // Funciones de navegaci√≥n
        function verProyecto(proyectoId) {
            window.location.href = `/proyectos/${proyectoId}`;
        }

        function generarVideo(proyectoId) {
            window.location.href = `/videos/crear/${proyectoId}`;
        }

        // Animaciones
        document.addEventListener('DOMContentLoaded', function() {
            // Animaci√≥n de aparici√≥n de tarjetas
            const cards = document.querySelectorAll('.proyecto-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
</body>
</html>